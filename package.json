{
  "name": "workspace-root",
  "version": "1.0.0",
  "description": "Root workspace for VPS deployment",
  "private": true,
  "scripts": {
    "build:backend": "cd TailwindAdminRasa && npm run build",
    "build:mobile": "cd customer-mobile-shop-clean && npm run build",
    "build:all": "npm run build:backend && npm run build:mobile",
    "start:prod": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "logs": "pm2 logs",
    "status": "pm2 status",
    "deploy": "npm run build:all && npm run start:prod"
  },
  "dependencies": {
    "pm2": "^5.4.2"
  }
}
