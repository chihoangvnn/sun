{
  "manifest_version": 3,
  "name": "Cookie Sync - Social Media Cookie Manager",
  "version": "1.0.0",
  "description": "Securely sync and manage social media cookies across devices with encrypted storage",
  
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "storage",
    "notifications"
  ],
  
  "host_permissions": [
    "https://facebook.com/*",
    "https://www.facebook.com/*",
    "https://*.facebook.com/*",
    "https://tiktok.com/*",
    "https://www.tiktok.com/*",
    "https://*.tiktok.com/*",
    "https://instagram.com/*",
    "https://www.instagram.com/*",
    "https://*.instagram.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://*.twitter.com/*",
    "https://*.x.com/*",
    "https://linkedin.com/*",
    "https://www.linkedin.com/*",
    "https://*.linkedin.com/*",
    "https://youtube.com/*",
    "https://www.youtube.com/*",
    "https://*.youtube.com/*",
    "http://localhost:5000/*",
    "https://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "https://127.0.0.1:5000/*",
    "http://*.replit.app/*",
    "https://*.replit.app/*",
    "http://*.replit.dev/*",
    "https://*.replit.dev/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://facebook.com/*",
        "https://www.facebook.com/*",
        "https://tiktok.com/*",
        "https://www.tiktok.com/*",
        "https://instagram.com/*",
        "https://www.instagram.com/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://linkedin.com/*",
        "https://www.linkedin.com/*",
        "https://youtube.com/*",
        "https://www.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cookie Sync",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["crypto.js"],
      "matches": ["<all_urls>"]
    }
  ]
}