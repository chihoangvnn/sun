{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/bot-cron?action=daily_tier_check",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/bot-cron?action=weekly_cart_recovery",
      "schedule": "0 10 * * 6"
    }
  ]
}