{
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "env": {
    "NEXT_PUBLIC_ENVIRONMENT": "@environment",
    "NEXT_PUBLIC_API_URL": "@api-url",
    "NEXT_PUBLIC_BACKEND_URL": "@backend-url",
    "NEXT_PUBLIC_FALLBACK_API_URL": "@fallback-api-url",
    "NEXT_PUBLIC_HEALTH_CHECK_PATH": "@health-check-path",
    "NEXT_PUBLIC_API_TIMEOUT": "@api-timeout",
    "NEXT_PUBLIC_VERIFY_SSL": "@verify-ssl",
    "NEXT_PUBLIC_ALLOWED_ORIGINS": "@allowed-origins"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_ENVIRONMENT": "production",
      "NEXT_PUBLIC_API_URL": "https://766e6631-b60d-4ccf-85ca-3c49dcdde735-00-mhe9utjyvofo.sisko.replit.dev",
      "NEXT_PUBLIC_BACKEND_URL": "https://766e6631-b60d-4ccf-85ca-3c49dcdde735-00-mhe9utjyvofo.sisko.replit.dev",
      "NEXT_PUBLIC_FALLBACK_API_URL": "https://766e6631-b60d-4ccf-85ca-3c49dcdde735-00-mhe9utjyvofo.sisko.replit.dev",
      "NEXT_PUBLIC_HEALTH_CHECK_PATH": "/api/health",
      "NEXT_PUBLIC_API_TIMEOUT": "15000",
      "NEXT_PUBLIC_VERIFY_SSL": "true",
      "NEXT_PUBLIC_ALLOWED_ORIGINS": "https://yourdomain.com,https://your-storefront.vercel.app"
    }
  },
  "functions": {},
  "rewrites": [],
  "redirects": [
    {
      "source": "/",
      "has": [
        {
          "type": "host",
          "value": "(?<storefront>.*)\\.your-domain\\.com"
        }
      ],
      "destination": "/:storefront"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/(.+\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(html|json))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, s-maxage=300"
        }
      ]
    }
  ]
}